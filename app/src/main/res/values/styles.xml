<resources>
    <style name="fab_menu_option">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fab_size">mini</item>
        <item name="fab_colorNormal">@color/app_red</item>
        <item name="fab_colorPressed">@color/light_red</item>
        <item name="fab_colorRipple">@color/light_red</item>
    </style>

    <style name="input_icon">
        <item name="android:layout_width">41dp</item>
        <item name="android:layout_height">41dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/app_red</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="clear_icon" parent="input_icon">
        <item name="android:text">@string/clear_icon</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="text_input">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:background">@drawable/text_input_border</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="no_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/no_content_top_margin</item>
        <item name="android:layout_marginLeft">@dimen/no_content_other_margins</item>
        <item name="android:layout_marginRight">@dimen/no_content_other_margins</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="action_icon">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">28dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="action_item">
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="ripple_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/ripple_button</item>
    </style>

    <style name="button_ripple_attributes">
        <item name="rd_rippleType">touch</item>
        <item name="rd_backgroundAnimDuration">0</item>
        <item name="rd_backgroundColor">@android:color/transparent</item>
        <item name="rd_maxRippleRadius">match_view</item>
        <item name="rd_rippleAnimDuration">@integer/shorter_anim_length</item>
        <item name="rd_delayClick">untilRelease</item>
    </style>
</resources>
