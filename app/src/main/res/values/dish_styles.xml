<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="dish_card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dish_form_card_spacing</item>
        <item name="contentPadding">8dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">3dp</item>
        <item name="cardElevation">2dp</item>
    </style>

    <style name="dish_form_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:background">@null</item>
    </style>

    <style name="star_icon">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">32dp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:text">@string/blank_star</item>
    </style>
</resources>
