<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/check_in_form_padding">

            <android.support.v7.widget.CardView
                android:id="@+id/restaurant_info_section"
                card_view:contentPadding="0dp"
                style="@style/form_card">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <include layout="@layout/base_restaurant_cell"/>

                    <TextView
                        android:id="@+id/choose_restaurant_prompt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:textSize="17sp"
                        android:textColor="@color/gray"
                        android:text="@string/check_in_location_prompt"/>
                </FrameLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:focusable="true"
                android:focusableInTouchMode="true"
                style="@style/form_card">

                <EditText
                    android:id="@+id/experience_input"
                    android:hint="@string/check_in_prompt"
                    android:minLines="3"
                    android:gravity="top"
                    style="@style/dish_form_input"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView style="@style/form_card">
                <TextView
                    android:id="@+id/date_input"
                    android:text="@string/dish_date_prompt"
                    android:textColor="@color/gray"
                    style="@style/dish_form_input"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                card_view:contentPadding="0dp"
                style="@style/form_card">

                <com.rey.material.widget.Button
                    android:id="@+id/save"
                    android:text="@string/save"
                    app:rd_style="@style/button_ripple_attributes"
                    style="@style/ripple_button_style"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>
