<?xml version="1.0" encoding="utf-8"?>
<com.github.clans.fab.FloatingActionMenu
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pick_source"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|end"
    android:layout_margin="@dimen/clan_fab_margin"
    fab:menu_fab_label="@string/add_a_dish"
    fab:menu_colorNormal="@color/app_red"
    fab:menu_colorPressed="@color/light_red"
    fab:menu_colorRipple="@color/light_red"
    fab:menu_shadowRadius="1dp"
    fab:menu_shadowXOffset="1dp"
    fab:menu_shadowYOffset="1dp">

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/from_files"
        fab:fab_label="@string/upload_from_gallery"
        style="@style/fab_menu_option"/>

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/from_camera"
        fab:fab_label="@string/take_a_picture"
        style="@style/fab_menu_option"/>
</com.github.clans.fab.FloatingActionMenu>
